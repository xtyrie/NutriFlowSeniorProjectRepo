<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutriFlow.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

           

            <Label
                Text="NutriFlow"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to NutriFlow"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to NutriFlow"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="LogInBtn"
                Text="Log In"
                SemanticProperties.Hint="Takes You to the Log In page"
                Clicked="OnLogInClicked"
                HorizontalOptions="Center" />

            <Button
    x:Name="SignUpBtn"
    Text="Sign Up"
    SemanticProperties.Hint="Takes You to the Sign Up"
    Clicked="OnSignUpClicked"
    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
